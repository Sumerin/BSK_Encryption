<Window x:Class="Proj2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proj2"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300" KeyUp="Key_Pressed">
    <Grid>
        <Label Content="Podaj nawę użytkownika i hasło" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="28,10,0,0" VerticalAlignment="Top" Width="243"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="68,82,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="login" HorizontalAlignment="Left" Height="23" Margin="68,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="password" Content="Hasło" HorizontalAlignment="Left" Margin="68,141,0,0" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Left" Margin="68,172,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Zaloguj" HorizontalAlignment="Left" Margin="113,216,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
